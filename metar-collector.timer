[Unit]
Description=Daily METAR Data Collection Timer
Requires=metar-collector.service

[Timer]
# Run daily at 02:00 UTC
OnCalendar=*-*-* 02:00:00
# If system was down, run on next boot
Persistent=true
# Add random delay to avoid hammering API at exact time
RandomizedDelaySec=300

[Install]
WantedBy=timers.target
